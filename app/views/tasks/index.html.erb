<h1>Here's your To-Do List</h1>

<ul>
<% @tasks.each do |task| %>
  <% if task[:completed] %>
    <li><%= task.completed %> <%= link_to task.title, task_path(task)%> <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
</li>
  <% else %>
    <li><%= task.completed %> <%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <% end %>
  <% end %>
  <%= link_to "+ Add a New Task", tasks_new_path %>
</ul>
